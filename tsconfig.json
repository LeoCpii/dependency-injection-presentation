{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "jsx": "preserve",
        "outDir": "./dist",
        "target": "ESNext",
        "module": "CommonJS",
        "rootDirs": [
            "./dist"
        ],
        "sourceMap": true,
        "declaration": true,
        "importHelpers": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "allowJs": true,
        "lib": [
            "esnext",
            "dom"
        ]
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
    ]
}